<manifest xmlns:android="http://schemas.android.com/apk/res/android">
	<uses-permission android:name="android.permission.VIBRATE"/>
	<application android:allowBackup="true"
				 android:icon="@drawable/app_icon"
				 android:label="@string/app_name"
				 android:supportsRtl="true"
				 android:theme="@style/AppTheme"

	>
		<!-- Declares the input method service -->
		<service android:name="com.lukeneedham.braillekeyboard.BrailleIMEService"
				 android:label="@string/brailleIME_label"
				 android:permission="android.permission.BIND_INPUT_METHOD">
			<intent-filter>
				<action android:name="android.view.InputMethod"/>
			</intent-filter>
			<meta-data
				android:name="android.view.im"
				android:resource="@xml/method"
			/>
		</service>

		<activity android:name="com.lukeneedham.braillekeyboard.BrailleIMESettingsActivity"
				  android:label="@string/brailleIME_settings_label">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

	</application>

</manifest>
